<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 лампочка"
        android:id="@+id/chk1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onConnect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 лампочка"
        android:id="@+id/chk2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/chk1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onConnect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 лампочка"
        android:id="@+id/chk3"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_below="@+id/chk2"
        android:layout_alignParentLeft="true"
        android:onClick="onConnect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 лампочка"
        android:id="@+id/chk4"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/chk3"
        android:layout_alignParentLeft="true"
        android:onClick="onConnect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 лампочка"
        android:id="@+id/chk5"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="onConnect"
        android:layout_below="@+id/chk4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 лампочка"
        android:id="@+id/chk6"
        android:layout_row="3"
        android:layout_column="0"
        android:onClick="onConnect"
        android:layout_below="@+id/chk5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7  лампочка"
        android:id="@+id/chk7"
        android:layout_row="0"
        android:layout_column="2"
        android:onClick="onConnect"
        android:layout_below="@+id/chk6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 лампочка"
        android:id="@+id/chk8"
        android:layout_row="3"
        android:layout_column="2"
        android:onClick="onConnect"
        android:layout_below="@+id/chk7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtVw"
        android:layout_row="12"
        android:layout_column="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
